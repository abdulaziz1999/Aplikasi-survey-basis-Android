<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ff5ec3ff"
        android:gravity="center"
        android:padding="20dip"
        android:textColor="#ffffff"
        android:text="BLOK III. KETERANGAN BUDIDAYA KOMODITAS PERKEBUNAN TERPILIH"
        android:textAlignment="center"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dip"
            android:orientation="vertical">


            <TextView
                style="@style/pertanyaan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="401. a Jenis Penggunaan Lahan :" />

            <RadioGroup
                android:tag="R401a"
                android:id="@+id/radioR401"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/radioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:text="Sawah" />

                <RadioButton
                    android:id="@+id/radioButton2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:checked="false"
                    android:text="Bukan Sawah" />
            </RadioGroup>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:text="b. Khusus tanaman terpilih tebu" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="55dp"
                android:text="Bila menggunakan lahan sawah, lamanya penggunaan lahan sawah untuk usaha tebu" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="55dp">

                <EditText
                    android:tag="R401b"
                    android:id="@+id/textR401b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tahun" />
            </LinearLayout>

            <TextView
                style="@style/pertanyaan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="402. Jarak Tanam :" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="55dp"
                android:orientation="horizontal">

                <EditText
                    android:tag="R402a"
                    android:id="@+id/textR402a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CM X " />

                <EditText
                    android:tag="R402b"
                    android:id="@+id/textR402b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CM" />
            </LinearLayout>

            <TextView
                style="@style/pertanyaan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="403. a. Jenis Varietas" />

            <RadioGroup
                android:tag="R403a"
                android:id="@+id/radioGroup403"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/radioButton403a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="55dp"
                    android:text="Unggul" />

                <RadioButton
                    android:id="@+id/radioButton403b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="55dp"
                    android:text="Lokal" />
            </RadioGroup>

            <TextView
                style="@style/pertanyaan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="55dp"
                android:text="b. Nama Varietas" />

            <EditText
                android:tag="R403b"
                android:id="@+id/textR403b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="55dp"
                android:width="200dp" />

            <TextView
                style="@style/pertanyaan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="404. Kualitas Benih" />

            <RadioGroup
                android:tag="R404"
                android:id="@+id/radioGroup404"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="55dp">

                <RadioButton
                    android:id="@+id/radioButtonR404a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bersertifikat" />

                <RadioButton
                    android:id="@+id/radioButtonR404b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tidak Bersertifikat" />

            </RadioGroup>

            <TextView
                style="@style/pertanyaan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="405. Khusus tanaman terpilih tembakau :" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="55dp"
                android:text="Produksi yang dihasilkan utamanya dijual dalam bentuk :" />

            <RadioGroup
                android:tag="R405"
                android:id="@+id/radioGroup405"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="55dp">

                <RadioButton
                    android:id="@+id/radio405a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tembakau Basah"></RadioButton>

                <RadioButton
                    android:id="@+id/radio405b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tembakau Kering"></RadioButton>

                <RadioButton
                    android:id="@+id/radio405c"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rajangan"></RadioButton>

            </RadioGroup>
        </LinearLayout>
        <include layout="@layout/kebun_hal_1a" />
    </LinearLayout>

</LinearLayout>
</ScrollView>